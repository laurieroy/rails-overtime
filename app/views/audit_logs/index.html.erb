<h1 class="mt-2">Audit Log Dashboard</h1>
<div class="row">
	<div class="column">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Employee</th>
					<th scope="col">Week Starting</th>
					<th scope="col">Confirmed At</th>
					<th scope="col">Status</th>
				</tr>
			</thead>
			<tbody>
				<%= render @audit_logs %>
			</tbody>
		</table>
		<div class="container pagination justify-content-center" >
			<%= paginate @audit_logs, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
		</div>
	</div>
</div>

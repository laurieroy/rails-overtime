<%= form_with(model: @post, class: "form-horizontal", role: "form", local: true) do |f| %>
  <% if @post.errors.any? %>
    <%  @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  
  <div class= "form-group">
    <%= f.label :overtime_request, class: "col-sm-2" %> 
    <%= f.number_field :overtime_request, step: 0.5, class: "form-control col-sm-10"  %>   
  </div>

  <div class= "form-group">
    <%= f.label :date, class: "col-sm-2" %> 
    <%= f.date_field :date, class: "form-control col-sm-10" %>  
  </div>

  <div class= "form-group">
    <%= f.label :rationale, class: "col-sm-2" %> 
    <%= f.text_area :rationale, class: "form-control col-sm-10"  %>   
  </div>

  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>

  <div class="form-group row">
    <%= f.submit 'Save', class: "btn btn-dark btn-block" %>
  </div>
<% end %>





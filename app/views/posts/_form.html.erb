<%= form_with(model: @post, class: "form-horizontal", role: "form", local: true) do |f| %>
  <% if @post.errors.any? %>
    <%  @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  <div class= "form-group">
    <%= f.label :date, class: "col-sm-2" %>
      <div class="col-sm-10">  
        <%= f.date_field :date, class: "form-control" %>
      </div>
  </div>
  <div class= "form-group">
    <%= f.label :rationale, class: "col-sm-2" %>
      <div class="col-sm-10"> 
        <%= f.text_area :rationale, class: "form-control"  %>
      </div>
  </div>

  <div class="form-group row">
    <%= f.submit 'Save', class: "btn btn-dark btn-block" %>
  </div>
<% end %>





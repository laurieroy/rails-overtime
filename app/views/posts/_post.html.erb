		<tr>
			<td><%= post.id %></td>
			<td><%= post.date %></td>
			<td><%= post.user.name.sorted.upcase %></td>
			<td><%= truncate(post.rationale) %></td>
			<td>
				<%= status_badge post.status %>
			</td>
			<td><%= link_to "Edit", edit_post_path(post), id: "edit_#{post.id}" %></td>
			<td><%= link_to "Delete", 
						post_path(post), 
						method: :delete, data: { confirm: "Are you sure?"},
						id: "delete_post_#{post.id}_from_index" %>
			</td>
		</tr>
<h1 class="mt-2">Posts</h1>
<div class="row">
	<div class="column">
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Overtime requested</th>
					<th scope="col">Date</th>
					<th scope="col">User</th>
					<th scope="col">Rationale</th>
					<th scope="col">Status</th>
					<th scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody id="posts">
				<%= render @posts %>
			</tbody>
		</table>
		<div class="container pagination justify-content-center" id="paginator" >
			<%= paginate @posts, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm", remote: true %>
		</div>
	</div>
</div>

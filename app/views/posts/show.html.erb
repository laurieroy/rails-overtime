<div class="card">
	<div class="card-title h2 mt-2"><%= @post.rationale %></div>
	<div class="card-body">
		<div>
			<h3><span>Overtime Amount Requested: </span><%= @post.overtime_request %></h3>
		</div>

		<div>
			<h3><span>Employee: </span><%= @post.user.name.sorted.upcase %></h3>
		</div>

		<div>
			<h3><span>Date Worked: </span><%= @post.date %></h3>
		</div>

		<div>
			<h3><span>Current Stage of Approval: </span><%= @post.status %></h3>
		</div>
	</div>
</div>

<%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary mt-2" if policy(@post).update? %>
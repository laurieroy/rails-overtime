<div class="logo container">
  <h1>Time Tracker</h1>
</div>

<% if current_user %>
<div class="container">
  <nav class="custom-nav navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= active?(root_path) %>">
          <%= link_to root_path, class: "nav-link" do %>
          <i class="fas fa-home"></i>
          <% end %>
        </li>

        <%= render 'shared/employee_nav_items' if employee? %>

        <%= render 'shared/audit_log' if admin? %>
      </ul>

      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Options
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= render 'shared/admin_dropdown' if admin? %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>

    </div>
  </nav>
</div>
<% end %>
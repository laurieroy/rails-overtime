 <% pending_approvals.each do |pa| %>
 <div class="homepage-block col-md-3">
   <h4>
     <%= pa.user.name.sorted  %>
   </h4>
   <p><span class="pending-details">
       Date Submitted: <%= pa.date %>
     </span></p>
   <p>
     <span class="pending-details">
       Rationale: <%= truncate(pa.rationale, length: 42) %>
     </span>
   </p>
   <div class="row">
     <div class="col-md-6 column">
       <%= link_to "Approve", approve_post_path(pa), class: "btn btn-success btn-block", id:"approve_#{pa.id}" %>
     </div>
     <div class="col-md-6 column">
       <%= link_to "Review", edit_post_path(pa), class: "btn btn-warning btn-block" %>
     </div>
   </div>
 </div>
 <% end %>